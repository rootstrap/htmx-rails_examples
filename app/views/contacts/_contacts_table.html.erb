<% include_checkbox ||= false %>

<table>
  <thead>
  <tr>
    <%= include_checkbox ? content_tag(:th) : '' %>
    <th>Name</th>
    <th>Email</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody id="tbody">
    <%= render(
      partial: 'contacts/contact_row',
      collection: contacts,
      as: :contact,
      locals: { include_checkbox: include_checkbox }
    ) %>
  </tbody>
</table>
